#!/usr/bin/expect -f
#
# Play game Alabaster.
#
# Based on https://ifarchive.org/if-archive/solutions/Alabaster_walkthroughs.pdf
#
set timeout -1

# Remove previous log, if any.
system rm -f "game.log"
log_file "game.log"

# Start the game.
spawn ./glulxe Alabaster.gblorb
match_max 100000

expect "hours."; send "\r"

#
# Ending #2.
# You free Snow White and return with hart's heart.
#
expect ">"; send "take heart\r"
expect ">"; send "put heart in box\r"
expect ">"; send "z\r"
expect ">"; send "a haven\r"
expect ">"; send "no\r"
expect ">"; send "no\r"
expect ">"; send "a where\r"
expect ">"; send "s\r"
expect ">"; send "s\r"
expect ">>"; send "yes\r"
expect "continue."; send " \r"
expect "continue."; send " \r"

# Quit
expect ">"; send "quit\r"
puts ""
exit
